${voffset 0}${goto 13}${font Ubuntu:size=7,weight:bold}${color2}Album   ${color1}${exec conkyClementine --datatype=AL --maxlength=32}
${voffset 0}${goto 13}${font Ubuntu:size=7,weight:bold}${color2}Piste  ${color1}${exec conkyClementine --datatype=TN --maxlength=32}${voffset 0}${goto 62}${font Ubuntu:size=7,weight:bold}${color1}${exec conkyClementine --datatype=PT --maxlength=32} . ${exec conkyClementine --datatype=LE --maxlength=32}
