# Use Xft?
use_xft yes
xftfont Trebuchet MS:size=8
xftalpha 0.8
text_buffer_size 2048
background no
# Update interval in seconds
update_interval 1
xftalpha 0.8
own_window_argb_visual yes
# This is the number of times Conky will update before quitting.
# Set to zero to run forever.
total_run_times 0

# Create own window instead of using desktop (required in nautilus)
own_window yes
own_window_transparent yes
own_window_type normal
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager

# Use double buffering (reduces flicker, may not work for everyone)
double_buffer yes

# Minimum size of text area
minimum_size 180 0

# Draw shades?
draw_shades no

# Draw outlines?
draw_outline no

# Draw borders around text
draw_borders no

# Stippled borders?
stippled_borders 0

# border width
border_width 1

# Default colors and also border colors
#default_color white
# own_window_colour white


# Subtract file system buffers from used memory?
no_buffers yes

# set to yes if you want all text to be in uppercase
uppercase no

# number of cpu samples to average
# set to 1 to disable averaging
cpu_avg_samples 2

# number of net samples to average
# set to 1 to disable averaging
net_avg_samples 2

# Force UTF8? note that UTF8 support required XFT
override_utf8_locale yes

# Add spaces to keep things from moving about?  This only affects certain objects.
use_spacer none

cpu_avg_samples 2
net_avg_samples 2
temperature_unit celsius
minimum_size 200 200
maximum_width 200
draw_graph_borders no
default_color 696969
alignment top_right
gap_x 12
gap_y 36

TEXT
${font sans-serif:bold:size=8}SYSTEME ${hr 2}
${font sans-serif:normal:size=8}$sysname $kernel $alignr $machine
Host:$alignr$nodename
Uptime:$alignr$uptime

${font sans-serif:bold:size=8}PROCESSEUR ${hr 2}
${font sans-serif:normal:size=8}${cpugraph cpu1}
CPU: ${cpu cpu1}% ${cpubar cpu1}
#CPU2 $alignc ${cpu cpu2}%  ${goto 140}${cpubar cpu2}

${font sans-serif:bold:size=8}MEMOIRE ${hr 2}
${font sans-serif:normal:size=8}RAM $alignc $mem / $memmax $alignr $memperc%
$membar
SWAP $alignc ${swap} / ${swapmax} $alignr ${swapperc}%
${swapbar}

${font sans-serif:bold:size=8}DISQUES ${hr 2}
${font sans-serif:normal:size=8}/ $alignc ${fs_used /} / ${fs_size /} $alignr ${fs_used_perc /}%
${fs_bar /}

${font sans-serif:bold:size=8}PROCESSUS ${hr 2}
${font sans-serif:normal:size=8}${top_mem name 1}${alignr}${top mem 1} %
${top_mem name 2}${alignr}${top mem 2} %
$font${top_mem name 3}${alignr}${top mem 3} %
$font${top_mem name 4}${alignr}${top mem 4} %
$font${top_mem name 5}${alignr}${top mem 5} %

${font sans-serif:bold:size=8}RESEAU ${hr 2}
${font sans-serif:normal:size=8}Externe IP: ${alignr}${texeci 3600 wget http://checkip.dyndns.org -O - -o /dev/null | cut -d : -f 2 | cut -d \< -f 1}
${if_up wlp1s0}Adress IP: $alignr ${addr wlp1s0}
SSID: $alignr ${wireless_essid wlp1s0}
Connection quality: $alignr ${wireless_link_qual wlp1s0}%
${downspeedgraph wlp1s0}
DLS:${downspeed wlp1s0} kb/s $alignr total: ${totaldown wlp1s0}
${upspeedgraph wlp1s0}
ULS:${upspeed wlp1s0} kb/s $alignr total: ${totalup wlp1s0}${else}Adress IP: $alignr ${addr enp2s0}
SSID: $alignr ${wireless_essid wlp1s0}
Connection quality: $alignr ${wireless_link_qual enp2s0}%
${downspeedgraph enp2s0}
DLS:${downspeed enp2s0} kb/s $alignr total: ${totaldown enp2s0}
${upspeedgraph enp2s0}
ULS:${upspeed enp2s0} kb/s $alignr total: ${totalup enp2s0}
