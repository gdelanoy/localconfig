{
  text[NORMAL]   = "#2f272f"
  text[PRELIGHT] = "#545450"
}

style "clearlooks-notebook" = "clearlooks-wide"
{
  bg[NORMAL] = "#75756F"
  bg[ACTIVE] = "#878780"
}

style "clearlooks-tasklist" = "clearlooks-default"
{
  xthickness = 5
  ythickness = 3
}

style "clearlooks-menu" = "clearlooks-default"
{
  xthickness = 2
  ythickness = 1
  bg[NORMAL] = "#656560"
  fg[NORMAL] = "#eaeae2"
  text[NORMAL] = "#eaeae2"
}

