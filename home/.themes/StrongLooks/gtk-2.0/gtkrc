{
  fg[NORMAL] = "#eaeae2"
}

style "clearlooks-tooltips" = "clearlooks-default"
{
  xthickness = 4
  ythickness = 4
  fg[NORMAL] = "#eaeae2"
  bg[NORMAL] = "#656A73"
  #bg[NORMAL] = "#2f272f"
}

style "clearlooks-progressbar" = "clearlooks-default"
{
  xthickness = 1
  ythickness = 1
  fg[PRELIGHT] = "#eaeae2"
  base[SELECTED] = "#656A73"
}

