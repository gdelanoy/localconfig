style "clearlooks-default"
{
  GtkButton      ::default_border    = { 0, 0, 0, 0 }
  GtkRange       ::trough_border     = 0
  GtkPaned       ::handle_size       = 6
  GtkRange       ::slider_width      = 19
  GtkRange       ::stepper_size      = 19
  GtkScrollbar   ::min_slider_length = 30
  GtkCheckButton ::indicator_size    = 12
  GtkMenuBar     ::internal-padding  = 0
  GtkExpander    ::expander_size     = 13
  GtkTreeView    ::expander_size     = 13
  GtkTreeView    ::odd_row_color     = "#dddddd"
  GtkTreeView    ::even_row_color    = "#ffffff"

  xthickness = 1
  ythickness = 1

  fg[NORMAL]        = "#eaeae2"
  fg[ACTIVE]        = "#eaeae2"
  fg[PRELIGHT]      = "#eaeae2"
  fg[SELECTED]      = "#eaeae2"
  fg[INSENSITIVE]   = "#4F4F4B"
  
  bg[NORMAL]        = "#656560"
  bg[ACTIVE]        = "#656A73"
  bg[SELECTED]      = "#2f272f"
  bg[PRELIGHT]      = "#545450"
  bg[INSENSITIVE]   = "#73736d"
  
  base[ACTIVE]      = "#2f272f"
  base[NORMAL]      = "#ffffff"
  base[PRELIGHT]    = "#2f272f"
  base[INSENSITIVE] = "#7D7D77"
  base[SELECTED]    = "#2f272f"

  text[INSENSITIVE] = "#6E6E68"
  text[SELECTED]    = "#eaeae2"
  text[ACTIVE]      = "#eaeae2"
  text[PRELIGHT]    = "#eaeae2"
  text[NORMAL]	    = "#2f272f"

  engine "clearlooks"  {
    contrast = 2.0
    menubarstyle      = 1       # 0 = flat, 1 = sunken, 2 = flat gradient
    menuitemstyle     = 1       # 0 = flat, 1 = 3d-ish (gradient), 2 = 3d-ish (button)
    listviewitemstyle = 1       # 0 = flat, 1 = 3d-ish (gradient)
    progressbarstyle  = 1       # 0 = candy bar, 1 = flat
  }
}

style "clearlooks-wide" = "clearlooks-default"
{
  xthickness = 2
  ythickness = 2
}

